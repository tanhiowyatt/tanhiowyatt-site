{
  "name": "site-tests",
  "version": "1.0.0",
  "description": "Test suite for tanhiowyatt website",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:a11y",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test || echo 'Playwright browsers not installed. Run: npx playwright install'",
    "test:security": "jest tests/security",
    "test:a11y": "jest tests/a11y",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "playwright:install": "npx playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "../assets/**/*.js",
      "!../assets/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^assets/(.*)$": "<rootDir>/../assets/$1"
    }
  }
}

